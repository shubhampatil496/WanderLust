<% layout("/layouts/boilerplate") %>
<br> 
    <div class="row">
        <div class="col-8 offset-2">
    <h3>Edit Your Listing</h3>
    <br>
    <form action="/listings/<%= listingData.id %>?_method=put" method="post" class="needs-validation" novalidate enctype="multipart/form-data">
        <div class="mb-3">
            <label for="Listing[title]">Title</label>
            <input type="text" name="Listing[title]" value="<%= listingData.title %>" class="form-control" required>
            <div class="invalid-feedback">
                 Please Enter Valid Title.
            </div>
        </div>
        <div class="mb-3">
            <label for="Listing[description]">Description</label>
            <textarea required class="form-control" name="Listing[description]"><%= listingData.description %></textarea>
             <div class="invalid-feedback">
                 Please Enter Description.
            </div>
        </div>
        <!-- image preview before edit an image -->
        <div class="mb-3">
            Original Image <br>
            <img src=<%= originalImageUrl %>  alt="...">
        </div>

        <div class="mb-3">
            <label for="Listing[image]">Upload Image</label>
            <input type="file" name="Listing[image]"  class="form-control">
        </div>
       <div class="row">
         <div class="mb-3 col-md-4">
            <label for="Listing[price]">Price</label>
            <input type="number" name="Listing[price]" value="<%= listingData.price %>" class="form-control" required>
             <div class="invalid-feedback">
                 Please Enter Price.
            </div>
        </div>
        <div class="mb-3 col-md-8">
            <label for="Listing[location]">Location</label>
            <input type="text" name="Listing[location]" value="<%= listingData.location %>" class="form-control" required>
             <div class="invalid-feedback">
                 Please Location.
            </div>
        </div>
       </div>
        <div class="mb-3">
            <label for="Listing[country]">Country</label>
            <input type="text" name="Listing[country]" value="<%= listingData.country %>" class="form-control" required>
             <div class="invalid-feedback">
                 Please Enter Country.
            </div>
        </div>
        <button class="btn btn-dark edt-btn">Edit</button> <br><br>
    </form>
    </div>
    </div>
